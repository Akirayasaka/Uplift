@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="admin_Category_Index">
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6">
                <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Category</a>
            </div>
        </div>

        <br />
        <br />

        <table id="dataTable" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in objectData.responseData.list">
                    <td class="align-middle">{{item.name}}</td>
                    <td class="align-middle">{{item.displayOrder}}</td>
                    <td>
                        <a :href="'/Admin/category/Upsert/'+item.id" class="btn btn-success text-white" style="cursor:pointer; width: 100px;">
                            <i class="far fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-danger text-white mx-1" style="cursor:pointer;" @@click.prevent="Delete(item.id)">
                            <i class="far fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/Areas/Admin/Category/Index.js"></script>
}